<!-- Validation failure messages -->

<% if @quote.errors.any? %>
<% @quote.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Responsive panel example -->

<div class="alert alert-info" role="alert">Please type the values you see in Project and User input boxes</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Quote</h3>
      </div>
      <div class="panel-body">
        <form action="/create_quote" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for project -->
          <div class="form-group">
            <label for="project" class="col-sm-2 control-label">
              Project
            </label>
            <div class="col-sm-10">
              <input type="text" id="project_id" name="project_id" class="form-control" placeholder="<%=params[:id]%>" value=<%= @quote.project_id %>>
            </div>
          </div>

          <!-- Label and input for users -->
          <div class="form-group">
            <label for="user" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" class="form-control" placeholder="<%= params[:u_id]%>" value="<%= @quote.user_id %>">
            </div>
          </div>

          <!-- Label and input for labor -->
          <div class="form-group">
            <label for="labor" class="col-sm-2 control-label">
              Labor Cost
            </label>
            <div class="col-sm-10">
              <input type="text" id="labor" name="labor" placeholder="Labor" class="form-control" value="<%= @quote.labor %>">
            </div>
          </div>

          <!-- Label and input for material -->
          <div class="form-group">
            <label for="material" class="col-sm-2 control-label">
              Material Cost
            </label>
            <div class="col-sm-10">
              <input type="text" id="material" name="material" placeholder="Material" class="form-control" value="<%= @quote.material %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Quote
              </button>
              or
              <a href="/quotes">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>



<!-- End responsive panel example -->
