<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Project #<%= @project.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Project type</dt>
              <dd><%= @project.project_type %></dd>

              <dt>Material</dt>
              <dd><%= @project.material %></dd>

              <dt>Design</dt>
              <dd><%= @project.design %></dd>

              <dt>Square feet</dt>
              <dd><%= @project.square_feet %></dd>

              <dt>Home type</dt>
              <dd><%= @project.home_type %></dd>

              <dt>Image</dt>
              <dd><img src="<%= @project.image %>", width="500"/></dd>

              <dt>Description</dt>
              <dd><%= @project.description %></dd>

            <% if current_user.user_type == "Admin" %>
              <dt>User</dt>
              <dd><%= @project.user.name %></dd>

              <% end %>

            </dl>
            <% if current_user.user_type == "Admin" %>

            <div class="btn-group btn-group-justified">
              <a href="/projects" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>
              </div>
              <% else %>

            <div class="btn-group btn-group-justified">
              <a href="/projects" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/projects/<%= @project.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_project/<%= @project.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <% if current_user.user_type == "Admin" %>
    <div class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default"><a href ="/quotes/new/<%= @project.id %>/<%= @project.user_id %>">Create Quote</button>
    </div>

    <div class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default"><a href ="/invoices/new/<%= @project.id %>">Create Invoice</button>
    </div>

    <% else %>
    <div class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default">See Quote</button>
    </div>

    <div class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default">See Invoice</button>
    </div>
    <% end %>
  </div>

</div>




<!-- End responsive panel example -->
